<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.boitcrp">

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@drawable/tainted_cain_app"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/tainted_cain_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.BOITCRP">
        <activity
            android:name=".activities.Home"
            android:exported="false"
            android:theme="@style/Theme.BOITCRP.NoActionBar"/>
        <activity
            android:name=".ui.auth.Login"
            android:exported="true"
            android:theme="@style/Theme.BOITCRP.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>